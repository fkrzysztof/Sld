@using Sasso.Data.Data.Data
@using Sald.Data.HelperClass
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] </title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.1/font/bootstrap-icons.css">

    @*Validation ******@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
    @*Validation ******@
    <script src="~/js/nicEdit.js"></script>
    <link href="~/css/site.css" rel="stylesheet" />
</head>

<body class="bg-light">

    @{
        string controllerPage = "";
        if (ViewContext.RouteData.Values["Controller"] != null)
        {
            controllerPage = ViewContext.RouteData.Values["Controller"].ToString();
        }

    }

    <nav class="navbar navbar-expand-lg navbar-light mb-5 shadow-lg bg-white">
        <div class="container">
            <a class="navbar-brand" href="#">

                <img id="logo" src="" style="max-height:50px;" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-md-flex justify-content-between" id="navbarNavAltMarkup">

                <div class="navbar-nav">
                    <a class="nav-link d-flex align-items-center @(controllerPage == "About" ? "active" : "")" asp-controller="About" asp-action="Index"><i class="bi bi-house m-2 icon-menu"></i>Home</a>
                    <a class="nav-link d-flex align-items-center @(controllerPage == "Settings" ? "active" : "")" asp-controller="Settings" asp-action="Index"><i class="bi bi-gear m-2 icon-menu"></i>Ustawienia</a>
                    <a class="nav-link d-flex align-items-center @(controllerPage == "Offer" ? "active" : "")" asp-controller="Offer" asp-action="Index"><i class="bi bi-folder2-open m-2 icon-menu"></i>Oferta</a>
                    <a class="nav-link d-flex align-items-center @(controllerPage == "Contact" ? "active" : "")" asp-controller="Contact" asp-action="Index"><i class="bi bi-phone m-2 icon-menu"></i>Kontakt</a>
                </div>

                <partial name="_LoginPartial" />

            </div>
        </div>
    </nav>


    <div class="container">
        @*row inside*@

        @if (!String.IsNullOrEmpty(controllerPage))
        {
            @await Html.PartialAsync("TopNavi")
        }


        @RenderBody()

    </div>
    <!-- Footer -->
    @*<footer class="py-3 container-fluid">
            <div class="container">
                <hr />
                <p class="m-0 text-center text-dark">Sald @DateTime.Now.Year</p>
            </div>
    </footer>*@

    <!-- Bootstrap core JavaScript -->
    @*<script src="~/lib/bootstrap/dist/css/bootstrap.min.css"></script>*@
    
    <script src="~/js/logo.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    @RenderSection("Scripts", required: false)
</body>

</html>

